{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Guardian Seed Action Contract v1",
  "type": "object",
  "required": ["actions"],
  "additionalProperties": false,

  "properties": {
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type"],
        "additionalProperties": false,

        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "STOP",
              "WAIT",
              "OBSERVE",
              "SPEAK",
              "NAVIGATE",
              "GRASP",
              "RELEASE"
            ]
          },

          "params": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "target": {
                "type": "string"
              },

              "duration_s": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 30.0
              },

              "speed_mps": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 0.5
              },

              "force_n": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 2.0
              },

              "utterance": {
                "type": "string",
                "maxLength": 200
              }
            }
          }
        }
      }
    }
  }
}
