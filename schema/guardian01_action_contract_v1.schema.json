{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://adamhindtesp.github.io/guardian01/schema/guardian01_action_contract_v1.schema.json",
  "title": "Guardian-01 Action Contract (Schema) v1",
  "type": "object",
  "required": ["actions"],
  "additionalProperties": false,

  "properties": {
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["type"],
        "additionalProperties": false,

        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "stop",
              "wait",
              "observe",
              "speak",
              "navigate",
              "grasp",
              "release"
            ]
          },

          "params": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "target": {
                "type": "object",
                "required": ["kind", "id"],
                "additionalProperties": false,
                "properties": {
                  "kind": {
                    "type": "string",
                    "enum": ["location", "object", "person", "area"]
                  },
                  "id": {
                    "type": "string"
                  }
                }
              },

              "duration_s": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 120.0
              },

              "speed_mps": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 0.5
              },

              "force_n": {
                "type": "number",
                "minimum": 0.0,
                "maximum": 2.0
              },

              "utterance": {
                "type": "string",
                "maxLength": 200
              }
            }
          }
        }
      }
    }
  }
}
